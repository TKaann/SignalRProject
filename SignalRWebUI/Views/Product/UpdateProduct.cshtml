@model UpdateProductDto
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Urun Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Urun Guncelleme Sayfasi</div>
						</div>
						<input type="hidden" asp-for="ProductID" />
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Urun Adini Giriniz</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="price">Urun Fiyatini Giriniz</label>
								<input type="text" class="form-control" asp-for="Price" id="price">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Urun Gorselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="imageurl">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="price">Urun Kategorisini Seciniz</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="description">Urun Aciklamasini Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Urunu Guncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
